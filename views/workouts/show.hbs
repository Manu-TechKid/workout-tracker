<!-- Workout Detail View -->
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-dumbbell me-2"></i>{{workout.title}}
                </h4>
                <span class="badge bg-light text-dark">{{workout.type}}</span>
            </div>
            <div class="card-body">
                {{#if workout.description}}
                <div class="mb-4">
                    <h6 class="text-muted">Description</h6>
                    <p class="mb-0">{{workout.description}}</p>
                </div>
                {{/if}}
                
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-clock text-primary me-3 fa-lg"></i>
                            <div>
                                <small class="text-muted">Duration</small>
                                <div class="fw-bold">{{workout.duration}} minutes</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-fire text-warning me-3 fa-lg"></i>
                            <div>
                                <small class="text-muted">Intensity</small>
                                <div class="fw-bold">{{workout.intensity}}</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                {{#if workout.calories}}
                <div class="mb-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-burn text-success me-3 fa-lg"></i>
                        <div>
                            <small class="text-muted">Calories Burned</small>
                            <div class="fw-bold">{{workout.calories}} calories</div>
                        </div>
                    </div>
                </div>
                {{/if}}
                
                <div class="mb-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-calendar text-info me-3 fa-lg"></i>
                        <div>
                            <small class="text-muted">Date</small>
                            <div class="fw-bold">{{formatDate workout.date}}</div>
                        </div>
                    </div>
                </div>
                
                {{#if workout.notes}}
                <div class="mb-4">
                    <h6 class="text-muted">Notes</h6>
                    <p class="mb-0">{{workout.notes}}</p>
                </div>
                {{/if}}
                
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="fas fa-clock me-1"></i>
                        Created: {{formatDate workout.createdAt}}
                    </small>
                    {{#if workout.updatedAt}}
                    <small class="text-muted">
                        <i class="fas fa-edit me-1"></i>
                        Updated: {{formatDate workout.updatedAt}}
                    </small>
                    {{/if}}
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <div class="d-flex justify-content-between">
                    <a href="/workouts" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Workouts
                    </a>
                    <div class="btn-group" role="group">
                        <a href="/workouts/{{workout._id}}/edit" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a href="/workouts/{{workout._id}}/delete" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Helper function to format dates
function formatDate(dateString) {
    if (!dateString) return '';
    const date = new Date(dateString);
    return date.toLocaleDateString();
}
</script>
