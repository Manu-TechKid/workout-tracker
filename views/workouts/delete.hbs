<!-- Delete Workout Confirmation -->
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Workout
                </h4>
            </div>
            <div class="card-body text-center">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone!
                </div>
                
                <h5 class="mb-3">{{workout.title}}</h5>
                
                <div class="row text-muted mb-4">
                    <div class="col-6">
                        <small>
                            <i class="fas fa-clock me-1"></i>{{workout.duration}} min
                        </small>
                    </div>
                    <div class="col-6">
                        <small>
                            <i class="fas fa-fire me-1"></i>{{workout.intensity}}
                        </small>
                    </div>
                </div>
                
                {{#if workout.description}}
                <p class="text-muted mb-4">{{workout.description}}</p>
                {{/if}}
                
                <form action="/workouts/{{workout._id}}?_method=DELETE" method="POST">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Workout
                        </button>
                        <a href="/workouts" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
